{
  "version": "0.2.0",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src",
    "jsx-runtime"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build && yarn docs:extract && yarn docs:generate",
    "test": "tsdx test --passWithNoTests",
    "lint": "tsdx lint",
    "docs:extract": "api-extractor run --local",
    "docs:generate": "api-documenter markdown -i ./temp -o ./docs/api",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "release": "yarn test && yarn build && npm publish --access public"
  },
  "peerDependencies": {
    "react": ">=17"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "name": "@pago/reactive",
  "author": "Patrick Gotthardt",
  "module": "dist/reactive.esm.js",
  "size-limit": [
    {
      "path": "dist/reactive.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/reactive.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@babel/core": "^7.12.7",
    "@microsoft/api-documenter": "^7.11.0",
    "@microsoft/api-extractor": "^7.12.0",
    "@size-limit/preset-small-lib": "^4.9.0",
    "@storybook/addon-essentials": "^6.1.2",
    "@storybook/addon-info": "^5.3.21",
    "@storybook/addon-links": "^6.1.2",
    "@storybook/addons": "^6.1.2",
    "@storybook/react": "^6.1.2",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "babel-loader": "^8.2.1",
    "husky": "^4.3.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-is": "^17.0.1",
    "size-limit": "^4.9.0",
    "tsdx": "^0.14.1",
    "tslib": "^2.0.3",
    "typescript": "^4.1.2"
  },
  "dependencies": {
    "prettier": "^1.19.1"
  },
  "resolutions": {
    "**/typescript": "^4.1.2",
    "**/@typescript-eslint/eslint-plugin": "^4.6.1",
    "**/@typescript-eslint/parser": "^4.6.1",
    "**/ts-jest": "^26.4.4",
    "**/jest": "^26.6.3"
  }
}
